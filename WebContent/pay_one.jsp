			var oid = $("#oid").val();
			// ajax查询订单是否支付成功
			$.ajax({
				url:'CheckPayServlet?oid='+oid,
				type:'get',
				success:function(data){
					if(data == "4"){
						// 已支付
						window.location.href="shopping-result.html";
					}
				}
			});
		}, 1000);
	});
</script>



